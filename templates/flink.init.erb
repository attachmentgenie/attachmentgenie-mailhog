#!/bin/bash
# flink daemon
# chkconfig: 345 20 80
# description: flink daemon
# processname: flink

NAME=flink
DESC="Flink Jobmanager"
PIDFILE=/tmp/$NAME--jobmanager.pid
SCRIPTNAME=/etc/init.d/$NAME

case "$1" in
start)
printf "%-50s" "Starting $NAME..."
<%= scope['flink::install_dir'] %>/bin/start-local.sh > /dev/null 2>&1
if [ -f $PIDFILE ]; then
printf "%s\n" "Ok"
else
printf "%s\n" "Fail"
fi
;;
status)
printf "%-50s" "Checking $NAME..."
if [ -f $PIDFILE ]; then
PID=`cat $PIDFILE`
if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
printf "%s\n" "Process dead but pidfile exists"
else
echo "Running"
fi
else
printf "%s\n" "Service not running"
fi
;;
stop)
printf "%-50s" "Stopping $NAME"
PID=`cat $PIDFILE`
if [ -f $PIDFILE ]; then
<%= scope['flink::install_dir'] %>/bin/stop-local.sh
rm -f $PIDFILE
else
printf "%s\n" "pidfile not found"
fi
;;

restart)
$0 stop
$0 start
;;

*)
echo "Usage: $0 {status|start|stop|restart}"
exit 1
esac